{
	"luci-app-apcontroller": {
		"description": "Grant UCI access for luci-app-apcontroller",
		"read": {
			"file": {
				"/etc/crontabs/root": [ "read" ],
				"/usr/share/apcontroller/apcontroller.user": [ "read" ]
			},
			"ubus": {
				"apcontroller": [ "activity", "scripts", "status" ],
				"file": [ "read" ],
				"luci-rpc": [ "getHostHints" ]
			},
			"uci": [ "apcontroller" ]
		},
		"write": {
			"file": {
				"/etc/crontabs/root": [ "write" ],
				"/etc/init.d/cron reload": [ "exec" ],
				"/usr/bin/apcontroller": [ "exec" ],
				"/usr/bin/apcontroller-sendconfig": [ "exec" ],
				"/usr/bin/sshpass": [ "exec" ],
				"/usr/share/apcontroller/apcontroller.user": [ "write" ]
			},
			"ubus": {
				"file": [ "write" ]
			},
			"uci": [ "apcontroller" ]
		}
	}
}
